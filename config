# Define colors variables:
set $darkbluetrans	#08052be6
set $darkblue		#08052b
set $lightblue		#5294e2
set $urgentred		#e53935
set $white		#ffffff
set $black		#000000
set $purple		#e345ff
set $darkgrey		#333333
set $grey		#b0b5bd
set $mediumgrey		#8b8b8b
set $lightgrey		#d4d4d4
set $yellowbrown	#e1b700

# define colors for windows:
#class		        	border		bground		text		indicator	child_border
client.focused		    	$lightgrey $lightgrey $black		$lightgrey	$lightgrey
client.unfocused	    	$darkgrey $darkgrey $grey		$darkgrey	$darkgrey
client.focused_inactive $darkgrey $black $grey		$darkgrey	$darkgrey
client.urgent		    	$urgentred	$urgentred	$white		$yellowbrown	$yellowbrown

############################################
# bar settings (input comes from i3blocks) #
############################################

# Start i3bar to display a workspace bar
# (plus the system information i3status finds out, if available)
bar {
		font pango: Go Mono Regular 8
        separator_symbol "||"
		status_command i3blocks -c ~/.config/i3/i3blocks.conf 
		position top
		tray_output primary
		tray_padding 0
		colors {
			separator          $white
			background         $black
			statusline         $white
#                          		border 		        bg			txt			indicator
			focused_workspace	$white              $white		$darkgrey	$purple
			active_workspace	$lightgrey          $lightgrey  $darkgrey	$purple
			inactive_workspace	$lightgrey          $darkgrey   $white		$purple
			urgent_workspace	$urgentred	    	$urgentred	$white		$purple
	}
}

#####################################
# Application menu handled by rofi: #
#####################################

# bindsym $mod+d exec --no-startup-id dmenu_run -i -nb '#000000' -nf '#ffffff' -sb '#969696' -sf '#000000' -fn 'GoMono:pixelsize=13'
bindsym $mod+d exec --no-startup-id rofi -modi drun -show drun \
		-theme ~/.config/rofi/drunstyle.rasi

